{
  "name": "updata",
  "version": "0.4.3",
  "description": "utility for updating hg sub-repositories",
  "scripts": {
    "prebuild": "rm -rf bin && npm run check-coverage",
    "build": "babel src --out-dir bin --source-maps",
    "watch": "babel src --out-dir bin --source-maps --watch",
    "start": "node --harmony bin/updata.js",
    "prepublish": "npm run build",
    "test": "ava src/*.spec.js",
    "check-coverage": "nyc npm test"
  },
  "bin": {
    "updata": "./bin/updata.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sappharx/hg-subrepo-updater"
  },
  "keywords": [
    "hg",
    "mercurial",
    "subrepo"
  ],
  "author": "Vincent Sisk",
  "license": "MIT",
  "homepage": "https://github.com/sappharx/hg-subrepo-updater",
  "dependencies": {
    "babel-polyfill": "6.7.2",
    "chalk": "1.1.1",
    "commander": "2.9.0",
    "shelljs": "0.6.0",
    "source-map-support": "0.4.0"
  },
  "devDependencies": {
    "ava": "0.13.0",
    "babel-cli": "6.6.5",
    "babel-preset-es2015-node5": "1.2.0",
    "nyc": "6.1.1"
  }
}
