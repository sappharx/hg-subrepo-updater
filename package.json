{
  "name": "updata",
  "version": "0.4.0",
  "description": "utility for updating hg sub-repositories",
  "main": "updata.js",
  "scripts": {
    "prebuild": "npm coverage",
    "build": "babel src --out-dir build --source-maps",
    "watch": "babel src --out-dir build --source-maps --watch",
    "start": "node --harmony build/updata.js",
    "preinstall": "npm run build",
    "test": "ava src/*.spec.js",
    "coverage": "nyc npm test"
  },
  "bin": {
    "updata": "./build/updata.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://vsisk@bitbucket.org/vsisk/updata.git"
  },
  "author": "Vincent Sisk",
  "license": "MIT",
  "homepage": "https://bitbucket.org/vsisk/updata#readme",
  "dependencies": {
    "babel-polyfill": "6.7.2",
    "chalk": "1.1.1",
    "commander": "2.9.0",
    "shelljs": "0.6.0",
    "source-map-support": "0.4.0"
  },
  "devDependencies": {
    "ava": "0.13.0",
    "babel-cli": "6.6.5",
    "babel-preset-es2015-node5": "1.2.0",
    "nyc": "6.1.1"
  }
}
